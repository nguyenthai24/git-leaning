<div class="container">
    <h2 class="page-title">Add a category</h2>
    <a href="/admin/category" class="btn btn-primary">Back to all category</a>
    <br />

    <form method="post" action="/admin/pages/add-category">
        <div class="form-group">
            <label class="form-label" for="">Title</label>
            <input type="text" class="form-control" name="title" value="<%= title %>" placeholder="Title" />
        </div>
        <div class="form-group">
            <label class="form-label" for="">Slug</label>
            <input type="text" class="form-control" name="slug" value="<%= slug %>" placeholder="Slug" />
        </div>

        <button class="btn btn-default">Submit</button>
    </form>
</div>
