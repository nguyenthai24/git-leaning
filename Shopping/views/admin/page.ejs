<div class="container">
    <h2 class="page-title mb-1">Pages</h2>
    <a href="/admin/pages/add-page" class="btn btn-primary">Add a new page</a>

    <table class="table table-striped">
        <thead>
            <tr class="home">
                <th>Tilte</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>

        <tbody id="sortable">
            <% pages.forEach((page) => { %>
                <tr id="id_<%=page._id%>" class="<%=page.slug%>">
                    <td><%= page.title %></td>
                    <td><a href="/admin/pages/edit-page/<%= page.slug %>">Edit</a></td>

                    <%if(page.slug == "home") { %>
                        <td></td>
                    <% } else { %>
                        <td><a href="/admin/pages/delete-page/<%= page._id %>">Delete</a></td>
                    <% } %>
                    
                </tr>
            <%})%>
        </tbody>
    </table>
</div>

