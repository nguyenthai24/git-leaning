<div class="container">
    <h2 class="page-title">Add a Product</h2>
    <a href="/admin/product" class="btn btn-primary">Back to all product</a>
    <br />

    <form method="post" action="/admin/product/add-product"  enctype="multipart/form-data">
        <div class="form-group">
            <label class="form-label" for="">Title</label>
            <input type="text" class="form-control" name="title" value="" placeholder="Title" />
        </div>
        <div class="form-group">
            <label class="form-label" for="">Price</label>
            <input type="text" class="form-control" name="price" value="" placeholder="Slug" />
        </div>
        <div class="form-group">
            <label class="form-label" for="">Category</label>
            <select name="category" class="custom-select">
                <% if(categorys) { %>
                    <%categorys.forEach( category => {%>
                        <option value="<%= category._id %>"><%= category.title %></option>
                    <% }) %>
                <% } %>
                
            </select>
        </div>
        <div class="form-group">
            <label class="form-label" for="">Image</label>
            <input type="file" class="form-control" name="img" value="" placeholder="" />
        </div>

        <label class="form-label" for="">Description</label>
        <div id="editor" class="form-group">
            
            <textarea name="desc" class="form-control" id="" cols="30" rows="10">
                
            </textarea>
        </div>

        <button class="btn btn-default">Submit</button>
    </form>
</div>
